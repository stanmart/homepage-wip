@bachelorsthesis{stancsics2014az,
  bibtex_show={true},
  title={Az egyens{\'u}ly v{\'e}leked{\'e}s-alap{\'u} finom{\'\i}t{\'a}sai szign{\'a}lj{\'a}t{\'e}kokban},
  author={Stancsics, Martin},
